<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/mvi_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No articles to show"
        android:textColor="#999"
        android:textSize="21sp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mvi_list_titles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ProgressBar
        android:id="@+id/mvi_progress_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/mvi_button_update"
        style="@android:style/Widget.Material.Button"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        tools:text="Updating"
        />

    <ProgressBar
        android:id="@+id/mvi_progress_small"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mvi_button_update"
        android:layout_alignLeft="@id/mvi_button_update"
        android:layout_alignTop="@id/mvi_button_update"
        android:layout_marginLeft="14dp"
        android:elevation="10dp"
        />

</RelativeLayout>
